<% include ../partials/header %>

<div class = 'container'>
    <header class = 'jumbotron'>
        <div class ='container'>
            <h1>Welcome to RateCamp</h1>
            <p>View our hand-picked campground from all over the world</p>
            <p>
                <a class = 'btn btn-primary' href = '/campgrounds/new'>Add new Campground</a>
            </p>
        </div>
    </header>
    
    <div class = 'row'>
        <% campgrounds.forEach(function(campground){%>
            <div class = 'col-lg-4 col-md-4 col-sm-6'>
                
                <div class = 'img-thumbnail'>
                    <img class="img-fluid" src = <%= campground.image%>>  
                    
              <figcaption class="figure-caption"><%= campground.name %></figcaption>
              
              <p>
                <a href = '/campgrounds/<%= campground._id%>' class = 'btn btn-primary'>More Info</a>
                </p>
                </div><!--control image as thumbnail-->
        
            </div><!--control image size-->
        <% }); %>
    </div>
</div><!--container-->

<% include ../partials/footer %>