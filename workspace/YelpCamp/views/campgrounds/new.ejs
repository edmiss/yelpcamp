<% include ../partials/header %>

<h1 style = 'text-align:center'>Create a new campground</h1>
<div class = 'container'>
    <div class = 'row'>
        <div style = 'width:30%; margin: 50px auto' >
    <form action  ='/campgrounds' method = 'post'>
        <div class = 'form-group'>
        <input class = 'form-control' type = 'text' name = 'name' placeholder = 'name'>
        </div>
        <div class = 'form-group'>
        <input class = 'form-control' type = 'text' name = 'image' placeholder = 'image url'>
        </div>
        
        <div class = 'form-group'>
        <input class = 'form-control' type = 'text' name = 'description' placeholder = 'desc'>
        </div>
        <div class = 'form-group'>
        <button class = 'btn btn-lg btn-block btn-primary'>Submit!</button>
        </div>
        
    </form>
    </div><!--width and margin auto-->
    
    </div><!--row-->
</div><!--container-->

<% include ../partials/footer %>