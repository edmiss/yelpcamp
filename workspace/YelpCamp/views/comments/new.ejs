<% include ../partials/header %>

<h1 style = 'text-align:center'>Create a new comment to<%= campground.name%></h1>
<div class = 'container'>
    <div class = 'row'>
        <div style = 'width:30%; margin: 50px auto' >
    <form action  ='/campgrounds/<%= campground._id%>/comments' method = 'post'>
        <div class = 'form-group'>
        <input class = 'form-control' type = 'text' name = 'comment[text]' placeholder = 'text'>
        </div>
        <div class = 'form-group'>
        <input class = 'form-control' type = 'text' name = 'comment[author]' placeholder = 'author'>
        </div>
        <div class = 'form-group'>
        <button class = 'btn btn-lg btn-block btn-primary'>Submit!</button>
        </div>
        
    </form>
    </div><!--width and margin auto-->
    
    </div><!--row-->
</div><!--container-->

<% include ../partials/footer %>